{
  "include": ["src"],
  "compilerOptions": {
      // Type-checker options
      "strict": true,
      "skipLibCheck": true,

      // Codegen options
      "jsx": "react",
      "lib": ["es2020", "dom"],
      "module": "ES2020",
      "target": "ES2020",

      // Resolution options
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowJs": true,

      // Output file options
      "outDir": "dist",
      "declaration": true,
      "sourceMap": true
  },
}